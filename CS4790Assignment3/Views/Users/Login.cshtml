@model CS4790Assignment3.Models.User
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Login";
}
@{
	var IsValidated = ViewData["IsValidated"];
	if (IsValidated == null)
	{
		@using (Html.BeginForm())
		{
			<div class="row">
				<div class="col-md-4"></div>
				<div class="col-md-4 text-center">
					<fieldset>
						<legend>Login</legend>
						<div class="text-danger text-center list-unstyled">
							@Html.ValidationSummary(true, "Login failed:")
						</div>
						<br />

						<div class="form-horizontal">
							@Html.LabelFor(u => u.Username)<span>&nbsp;</span>@Html.TextBoxFor(u => u.Username)
							<div class="text-danger">
								@Html.ValidationMessageFor(u => u.Username)
							</div>
						</div>

						<div class="form-horizontal">
							@Html.LabelFor(u => u.Password)<span>&nbsp;&nbsp;</span>@Html.PasswordFor(u => u.Password)
							<div class="text-danger">
								@Html.ValidationMessageFor(u => u.Password)
							</div>
						</div>

						<div class="form-horizontal">
							@Html.LabelFor(u => u.RememberMe) @Html.CheckBoxFor(u => u.RememberMe)
							<div class="text-danger">
								@Html.ValidationMessageFor(u => u.RememberMe)
							</div>
						</div>

						<input type="submit" value="Log In" class="btn btn-primary" />
					</fieldset>
				</div>
				<div class="col-md-4"></div>
			</div>
		}
	} else
	{
		<div class="row">
			<div class="col-md-12">You are already authenticated, @ViewData["Username"]. <a asp-action="Index" asp-controller="Games">Return to home page.</a></div>
		</div>

	}
}

<div class="text-muted text-center">
	<br /><br />
	<p>DEBUG: Pre-populated credentials, or create your own basic User account using the <a asp-action="Create" asp-controller="Users">account registration</a> page.</p>
	<p>[Admin Role] U: Admin, P: Password123 || [User Role] U: User, P: 123Password</p>
</div>