@model CS4790Assignment3.Models.User
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Register";
}

<div class="row">
	<h2 class="text-center">New User Registration</h2>
	<br />
</div>

<form asp-action="Create">
	<div class="form-horizontal">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<div class="form-group">
					<label asp-for="Username" class="col-md-4 control-label"></label>
					<div class="col-md-8">
						<input asp-for="Username" type="text" class="form-control" />
						<span asp-validation-for="Username" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="Password" class="col-md-4 control-label"></label>
					<div class="col-md-8">
						<input asp-for="Password" type="password" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<label asp-for="EmailAddress" class="col-md-4 control-label"></label>
					<div class="col-md-8">
						<input asp-for="EmailAddress" type="email" class="form-control" />
						<span asp-validation-for="EmailAddress" class="text-danger"></span>
					</div>
				</div>

				<div class="col-md-3"></div>
			</div>
			<div class="row form-group">
				<div class="col-md-12 text-center">
					<input type="submit" value="Register" class="btn btn-success" />
					<a asp-action="Index" asp-controller="Games" class="btn btn-danger">Cancel</a>
				</div>
			</div>
		</div>
	</div>
</form>